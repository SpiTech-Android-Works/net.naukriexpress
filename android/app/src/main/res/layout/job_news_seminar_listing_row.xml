<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout style="@style/box_header">
        <TextView
            android:id="@+id/date"
            style="@style/lbl_black_bold"
            android:inputType="textCapWords"
            android:text="Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:padding="8dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_margin="2dp"
            android:src="@drawable/no_image"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/title"
            style="@style/lbl15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Package Name"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            style="@style/lbl12"
            android:id="@+id/view_counter"
            android:layout_weight="1"
            android:text="0 Views" />
        <TextView
            style="@style/lbl12"
            android:id="@+id/time"
            android:layout_weight="1"
            android:text="8 days ago" />
        <TextView
            android:id="@+id/share"
            style="@style/lbl12"
            android:layout_weight="1"
            android:drawableLeft="@drawable/share_12_12"
            android:drawablePadding="5dp"
            android:text="Share" />
        <TextView
            android:id="@+id/bookmarks"
            style="@style/lbl12"
            android:layout_weight="1"
            android:drawableLeft="@drawable/bookmark_12_12"
            android:text="Bookmark" />
    </LinearLayout>
</LinearLayout>

