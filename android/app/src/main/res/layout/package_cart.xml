<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    style="@style/screen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:background="@color/white"
            android:id="@+id/product_name"
            style="@style/lbl20"
            android:gravity="center_horizontal"
            android:text="Product Name"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            style="@style/formGroupHorizontal"
            android:layout_marginBottom="@dimen/dimen_10dp">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/no_image" />
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/lbl15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Price"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/net_total"
                    style="@style/lblTag"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="00.00"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/box_common_margin"
            android:background="@drawable/box_home"
            android:orientation="vertical"
            android:padding="@dimen/box_common_padding"
            android:paddingBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout style="@style/box_header"
                    android:layout_weight="1"
                    android:layout_width="match_parent">
                    <TextView
                        style="@style/lbl_black_bold"
                        android:text="Billing Details" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/name"
                        style="@style/edit_text"
                        android:hint="Full Name(*)"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:maxLength="10"
                            android:id="@+id/mobile"
                            style="@style/edit_text"
                            android:hint="Mobile Number(*)"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/email"
                        style="@style/edit_text"
                        android:hint="Email Id(*)"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/district"
                        style="@style/edit_text"
                        android:hint="Distrct Name"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/block"
                        style="@style/edit_text"
                        android:hint="Block Name"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_success"
            android:id="@+id/btnCheckout"
            android:text="Checkout"/>
    </LinearLayout>
</ScrollView>
