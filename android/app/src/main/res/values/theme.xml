<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterailButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/purpule</item>
    </style>

    <style name="screen">
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="box">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/box</item>
    </style>


    <style name="box_header">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/orange</item>
    </style>
    <style name="box_header2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/orange</item>
    </style>

    <style name="box_header_title">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="box_header_title_right">
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/blue</item>
    </style>



    <style name="home_quick_link_icon">
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="home_connect_with_us_icon">
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <style name="Spiner" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spacing</item>
    </style>

    <!--Button-->
    <style name="testStartButton">
        <item name="android:background">@drawable/box</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_rounded">
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="account_box">
        <item name="android:background">@drawable/box_home</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">11</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="download_heading">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="circle_time">
        <item name="android:duplicateParentState">true</item>
        <item name="android:background">@drawable/ic_circle1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="live_test_btn">
        <item name="android:background">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="live_test_txt_btn">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="quick_link_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>